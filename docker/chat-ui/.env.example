# VibeCode Chat-UI Environment Configuration

# Application settings
NODE_ENV=production
PORT=3000
HOST=0.0.0.0
PUBLIC_ORIGIN=https://chat.vibecode.dev

# MongoDB connection
MONGODB_URL=mongodb://chatui_user:chatui_password_2025@mongodb:27017/chatui

# AI Model API Keys
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
HF_ACCESS_TOKEN=hf_your-huggingface-token-here

# Chat-UI Features
ENABLE_ASSISTANTS=true
ENABLE_ASSISTANTS_RAG=true
ENABLE_WEB_SEARCH=true
ENABLE_COMMUNITY_SHARING=false

# Security
RATE_LIMIT_SECRET=your-rate-limit-secret-here
PARQUET_EXPORT_SECRET=your-parquet-export-secret-here

# Integration with VibeCode platform
VIBECODE_API_ENDPOINT=http://vibecode-api:3000
VIBECODE_WORKSPACE_SERVICE=http://vibecode-workspaces:8080
VIBECODE_FILE_UPLOAD_SERVICE=http://vibecode-api:3000/api/ai/upload
{
  "name": "API Health Check - VibeCode WebGUI",
  "type": "api",
  "subtype": "http",
  "request": {
    "method": "GET",
    "url": "${VIBECODE_BASE_URL}/api/health",
    "timeout": 30
  },
  "options": {
    "min_failure_duration": 0,
    "min_location_failed": 1,
    "tick_every": 300
  },
  "locations": [
    "aws:us-east-1"
  ],
  "message": "Notify @all if the VibeCode WebGUI health check is failing.",
  "tags": [
    "env:production",
    "app:vibecode-webgui",
    "critical"
  ],
  "assertions": [
    {
      "operator": "is",
      "type": "statusCode",
      "target": 200
    },
    {
      "operator": "lessThan",
      "type": "responseTime",
      "target": 1000
    }
  ]
}

# VibeCode WebGUI Environment Variables
# Copy this file to .env.local and fill in your actual values
# SECURITY: Never commit actual secrets to version control

# =============================================================================
# DATADOG CONFIGURATION
# =============================================================================
# Get your API key from: https://app.datadoghq.com/organization-settings/api-keys
DD_API_KEY=your-datadog-api-key-here
DD_SITE=datadoghq.com
DD_ENV=development
DD_SERVICE=vibecode-webgui
DD_VERSION=1.0.0

# Frontend RUM Configuration (exposed to the browser)
NEXT_PUBLIC_DATADOG_APPLICATION_ID=your-rum-application-id
NEXT_PUBLIC_DATADOG_CLIENT_TOKEN=your-rum-client-token
NEXT_PUBLIC_DATADOG_SITE=datadoghq.com
NEXT_PUBLIC_APP_VERSION=1.0.0
# NEXT_PUBLIC_VERCEL_ENV is set automatically by Vercel, otherwise NODE_ENV is used as a fallback.

# =============================================================================
# AI INTEGRATION
# =============================================================================
# OpenRouter API key for multi-model AI access
OPENROUTER_API_KEY=your-openrouter-api-key-here

# Claude API key (if using direct Claude integration)
CLAUDE_API_KEY=your-claude-api-key-here

# Vector Database
CHROMA_DB_URL=http://localhost:8000

# OpenAI Configuration (used for embeddings and some models)
OPENAI_API_KEY=your-openai-api-key-here

# AI Model Defaults
DEFAULT_LLM_MODEL=gpt-4-turbo
MAX_TOKENS=4000
TEMPERATURE=0.7

# Error Tracking
ERROR_TRACKING_DSN=your-error-tracking-dsn

# AI Analytics
ENABLE_AI_ANALYTICS=true

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL connection
DATABASE_URL=postgresql://username:password@localhost:5432/vibecode_dev

# Redis connection
REDIS_URL=redis://localhost:6379

# =============================================================================
# AUTHENTICATION
# =============================================================================
# NextAuth.js configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-here

# ---------------------------------
# --- Rate Limiting (Upstash Redis) ---
# ---------------------------------
UPSTASH_REDIS_REST_URL=""
UPSTASH_REDIS_REST_TOKEN=""

# ---------------------------------
# --- Database (Optional) -------
# ---------------------------------

# OAuth providers (optional)
GITHUB_ID=your-github-oauth-app-id
GITHUB_SECRET=your-github-oauth-secret

GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret

# =============================================================================
# KUBERNETES CLUSTER CONFIGURATION
# =============================================================================
# Cluster configuration
KUBECONFIG=/path/to/your/kubeconfig
KUBERNETES_NAMESPACE=vibecode-platform

# Ingress domain
PLATFORM_DOMAIN=vibecode.dev

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=3000
VITE_PORT=5173

# Enable development features
ENABLE_DEBUG_LOGGING=true
ENABLE_DATADOG_INTEGRATION_TESTS=false

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT secret for API authentication
JWT_SECRET=your-jwt-secret-here

# Session encryption key
SESSION_SECRET=your-session-secret-here

# API rate limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
# Enable monitoring features
ENABLE_MONITORING=true
ENABLE_PERFORMANCE_TRACKING=true
ENABLE_ERROR_TRACKING=true

# Health check configuration
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000

# =============================================================================
# AI GATEWAY CONFIGURATION
# =============================================================================
# AI model preferences
DEFAULT_AI_MODEL=anthropic/claude-3-sonnet
AI_REQUEST_TIMEOUT=30000
AI_MAX_TOKENS=4096

# Usage tracking
ENABLE_AI_USAGE_TRACKING=true
AI_COST_TRACKING=true

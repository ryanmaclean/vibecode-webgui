# Environment Configuration
NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# OpenRouter Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_TIMEOUT=60000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Authentication
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRATION=24h
API_KEYS=vbai_dev_key_1,vbai_dev_key_2

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8090,https://*.vibecode.dev

# Caching
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Monitoring
ENABLE_METRICS=true
ENABLE_REQUEST_LOGGING=true

# Model Configuration
DEFAULT_MODEL=anthropic/claude-3-sonnet-20240229
FALLBACK_MODELS=anthropic/claude-3-haiku-20240307,openai/gpt-3.5-turbo
COST_WARNING_THRESHOLD=10.0
COST_LIMIT_THRESHOLD=100.0

# Logging
LOG_LEVEL=info